<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class = "container">
  <div>
    <div class = "col-md-12 blog-main">
      <div>
        <% @users.each do |user| %>
          <div>
            <h2><%= user.name %></h2> <h2><%= user.lastname %></h2>
            <hr>
            <div class ="row">
              <% if user.image.attached? == true%>
                <div class = 'col' > <span class="border"><%= image_tag(url_for(user.logo))%></span></div>
              <%else%>
                <div class = 'col' > <span class="border"><%= image_tag("Ruby.jpg")%></span></div>
              <% end %>
              <div class = 'col' > <h3> <%= user.login%></h3></div>
              <div class = 'col' > <h3> <%= user.email%></h3></div>
            </div>
            <br>
            <%= link_to 'Show', user_path(user), :class => 'btn btn-outline-primary' %>
          </div>
          <hr>
          <br>
        <%end%>
      </div>
    </div>
  </div>
</div>